# proper way of redirect
ErrorDocument 404 /error.php
ErrorDocument 401 /error.php
ErrorDocument 500 /error.php


# remove .php extension
RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.php [NC,L]

